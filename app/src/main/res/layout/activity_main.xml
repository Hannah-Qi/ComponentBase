<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/app_shell_home" />

    <Button
        android:id="@+id/but_to_order"
        android:text="@string/button_to_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/but_to_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_to_personal" />

    <Button
        android:id="@+id/but_to_my_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_mylibrary" />

</LinearLayout>